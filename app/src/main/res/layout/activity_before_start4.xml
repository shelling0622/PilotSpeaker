<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BeforeStart4"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/img_before_start4_icon"
        android:layout_width="@dimen/bigSize"
        android:layout_height="@dimen/bigSize"
        android:layout_marginTop="@dimen/mediumMargin"
        android:background="@drawable/earn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_before_start4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallMargin"
        android:lineSpacingExtra="8dp"
        android:paddingLeft="@dimen/mediumMargin"
        android:paddingRight="@dimen/mediumMargin"
        android:text="현재는 기업이 '개인정보제공동의'만 받고 데이터를 공짜로 수집하고 있는데, 방금 말씀드린 그런 서비스가 있게 되면 나한테 돈을 지불하고 데이터를 가져가게 됩니다. 이러한 컨셉을 유념해주시고 실험을 시작하시면 됩니다.
"
        android:textColor="#fff"
        android:textSize="@dimen/smallText"
        app:layout_constraintTop_toBottomOf="@id/img_before_start4_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/smallMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btn_before_start4_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:padding="@dimen/mediumPadding"
            android:text="이전으로"
            android:textColor="#fff"
            android:textSize="@dimen/smallText" />

        <Button
            android:id="@+id/btn_before_start4_after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:padding="@dimen/mediumPadding"
            android:text="다음으로"
            android:textColor="#fff"
            android:textSize="@dimen/smallText"
            android:layout_marginLeft="@dimen/smallMargin"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>