<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AskDiaryKeyword"
    android:padding="@dimen/mediumMargin"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_askdiarykeyword_icon"
            android:layout_width="@dimen/bigSize"
            android:layout_height="@dimen/bigSize"

            android:layout_marginBottom="@dimen/smallMargin"/>

        <ImageView
            android:id="@+id/img_askdiarykeyword_recording"
            android:layout_width="@dimen/smallSize"
            android:layout_height="@dimen/smallSize"
            android:background="@drawable/settings"
            android:layout_marginBottom="@dimen/mediumMargin"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btn_askdiarykeyword_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:padding="@dimen/mediumPadding"
            android:text="기록 종료"
            android:textSize="@dimen/mediumText"
            android:textColor="#fff"
            android:visibility="invisible"/>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>