<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Mainpage">

    <Button
        android:id="@+id/btn_mainpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘의 일기 기록하기"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/mediumMargin"
        android:layout_marginRight="@dimen/mediumMargin"
        android:padding="@dimen/mediumPadding"
        android:textSize="@dimen/mediumText"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="핸드폰의 내 파일 > 내장 메모리 > PilotSpeaker 안에 Diary, Emotion, Keyword 폴더에 녹음 파일이 저장됩니다. 잘 저장되고 있는지 확인해주세요."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/mediumMargin"
        android:layout_marginRight="@dimen/mediumMargin"
        android:layout_marginBottom="@dimen/mediumMargin"
        android:lineSpacingExtra="7dp"/>

</android.support.constraint.ConstraintLayout>