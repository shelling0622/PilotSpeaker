<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BeforeStart1"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/img_before_start1_icon"
        android:layout_width="@dimen/bigSize"
        android:layout_height="@dimen/bigSize"
        android:background="@drawable/closet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/mediumMargin"/>

    <TextView
        android:id="@+id/txt_before_start1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이제부터 이용해볼 앱은 나의 이야기를 대화하듯 기록해서 내 기억을 서랍에 넣어두듯이 저장해주는 기억 서랍입니다. "
        app:layout_constraintTop_toBottomOf="@id/img_before_start1_icon"
        android:textSize="@dimen/mediumText"
        android:paddingLeft="@dimen/mediumMargin"
        android:paddingRight="@dimen/mediumMargin"
        android:layout_marginTop="@dimen/mediumMargin"
        android:lineSpacingExtra="10dp"
        android:textColor="#fff"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/smallMargin"
        android:gravity="center">

        <Button
            android:id="@+id/btn_before_start1_after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:text="다음으로"
            android:textColor="#fff"
            android:padding="@dimen/mediumPadding"
            android:textSize="@dimen/smallText"
            />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>