<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yonsei.hcilab.lbproject.pilotspeaker">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.StartApp" />
        <activity android:name=".Activity.RecordDiary" />
        <activity android:name=".Activity.AskEmotion" />
        <activity android:name=".Activity.AskDiaryKeyword" />
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.BeforeStart1" />
        <activity android:name=".Activity.BeforeStart2" />
        <activity android:name=".Activity.BeforeStart3" />
        <activity android:name=".Activity.BeforeStart4" />
        <activity android:name=".Activity.Mainpage"></activity>
    </application>

</manifest>